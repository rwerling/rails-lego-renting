<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">

      <div class="card-trip mb-3">
        <%= cl_image_tag(@lego.photo.key, class:"card-image") %>
        <div class="card-trip-infos">
          <div>
            <h1><%= @lego.title %></h1>
            <p>Short description here!</p>
            <p><%= link_to "Add review", new_lego_booking_path(@lego) %></p>
          </div>
          <button type="button" class="btn btn-info">
            <%= link_to "Book now", new_lego_booking_path(@lego) %>
          </button>
        </div>
      </div>


        <% if @lego.reviews.present? %>
        <div class="row mb-3">
          <% @lego.reviews.each do |review| %>
            <div class="col-12 col-lg-6 mb-3">
              <div class="card-product">

                  <div class="card-product-infos">
                    <h2><%= review.comment %> </h2>
                    <p> <%= review.rating %> </p>
                  </div>
              </div>
            </div>
          <% end %>
        <% else %>
        <p>There are no reviews for this model yet.</p>
        <% end %>
        </div>

      <div>
        <p><%= link_to 'Delete Lego model', lego_path(@lego), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'text-danger' %></small></p>
      </div>
  </div>
</div>
