<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 pb-3">
      <h1>Create a new Lego model</h1>
      <%= simple_form_for @lego do |f| %>
        <%= f.input :title %>
        <%= f.input :number_of_parts %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
    <%= link_to "Back to all Lego sets", legos_path %>
  </div>
</div>
